@BeforeEach
void setUp() throws Exception {
    tempProtoDir = Files.createTempDirectory("proto-dir").toFile();
    tempOutputDir = Files.createTempDirectory("output-dir").toFile();
    tempTemplateDir = Files.createTempDirectory("template-dir").toFile(); // NEW

    // .proto Datei erstellen
    File protoFile = new File(tempProtoDir, "sample.proto");
    try (Writer writer = new FileWriter(protoFile)) {
        writer.write("""
            package osplus.sample;

            message Person {
                string name = 1;
                repeated int32 scores = 2;
            }
        """);
    }

    // Fake templates im temp dir
    File dtoTemplate = new File(tempTemplateDir, "rest-dto.ftl");
    try (Writer writer = new FileWriter(dtoTemplate)) {
        writer.write("package ${packageName};\npublic class ${className} {\n<#list fields as field>\nprivate ${field.javaType} ${field.name};\n</#list>\n}");
    }

    File mapperTemplate = new File(tempTemplateDir, "rest-mapper.ftl");
    try (Writer writer = new FileWriter(mapperTemplate)) {
        writer.write("package ${mapperPackage};\ninterface ${mapperInterfaceName} {}");
    }

    // Optional: Inject template path into plugin via setter / method param (see below)
}
