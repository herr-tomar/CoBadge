hazelcast:
  topic:
    panToCardReq: CardByPanLookupRequestReliableTopic
    panToCardRes: CardByFriendLookupResponseReliableTopic
    friendToCardReq: CardByFriendLookupRequestReliableTopic
    friendToCardRes: CardByFriendLookupResponseReliableTopic

--------------------

package osplus.pkppuma.config;

import org.springframework.boot.context.properties.ConfigurationPropertiesScan;
import org.springframework.boot.context.properties.EnableConfigurationProperties;
import org.springframework.context.annotation.Configuration;
import osplus.pkppuma.configprops.HazelRelTopicConfigProps;

@Configuration
@ConfigurationPropertiesScan
@EnableConfigurationProperties(HazelRelTopicConfigProps.class)
public class ConfigPropsConfig {
}
--------------------

package osplus.pkppuma.configprops;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.validation.annotation.Validated;

@ConfigurationProperties(prefix = "hazelcast.topic")
@Validated
public class HazelRelTopicConfigProps {

    private String panToCardReq;
    private String panToCardRes;
    private String friendToCardReq;
    private String friendToCardRes;

    public String getPanToCardReq() {
        return panToCardReq;
    }

    public void setPanToCardReq(String panToCardReq) {
        this.panToCardReq = panToCardReq;
    }

    public String getPanToCardRes() {
        return panToCardRes;
    }

    public void setPanToCardRes(String panToCardRes) {
        this.panToCardRes = panToCardRes;
    }

    public String getFriendToCardReq() {
        return friendToCardReq;
    }

    public void setFriendToCardReq(String friendToCardReq) {
        this.friendToCardReq = friendToCardReq;
    }

    public String getFriendToCardRes() {
        return friendToCardRes;
    }

    public void setFriendToCardRes(String friendToCardRes) {
        this.friendToCardRes = friendToCardRes;
    }

}
