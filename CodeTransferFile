package osplus.pkppuma.uimodule;

import osplus.apl.core.api.validation.AplValidated;
import osplus.apl.uui.api.MethodType;
import osplus.apl.uui.api.UiModule;
import osplus.apl.uui.api.UiService;
import osplus.fi.core.logging.api.Logger;
import osplus.fi.core.logging.api.LoggerFactory;

import java.time.Instant;
import java.time.ZoneId;
import java.time.ZoneOffset;
import java.util.Map;

@UiModule("helloModule")
@AplValidated
public class InitialUiModule {

    private static final Logger LOGGER = LoggerFactory.getLogger(InitialUiModule.class);

    @UiService(value = "dateTime", method = MethodType.GET, internalOnly = true, requiresAuthentication = false)
    public Map<String, Object> getDateTimeInfo() {
        final Instant instant = Instant.now();
        final long currentTimeMillis = instant.toEpochMilli();
        final String dateTimeString = DateTimeUtil.DATE_TIME_FORMATTER.format(instant.atOffset(ZoneOffset.UTC));
        final ZoneId serverTimezone = ZoneId.systemDefault();

        return Map.of(
                "dateTime", dateTimeString,
                "zoneId", serverTimezone,
                "epoch", currentTimeMillis
        );
    }

}


 curl -X GET http://localhost:8080/pkppuma/helloModule/v1/dateTime/v1
