message DisputeCreateRequestDto {
  string impulsOid = 1;
  string umsatzId = 2;
  string empfKontoId = 3;
  string empfBlz = 4;

  string reklaGrundKat1 = 5;          // Kategorie-Code (String)
  double reklaBetrag = 6;             // BigDecimal → double
  string reklaBetragWs = 7;           // Währungscode (ISO 4217)
  string transactionSign = 8;         // "DEBIT"/"CREDIT"
  string reklaTeilbetragKz = 9;       // "J"/"N"

  string karteSperren = 10;           // "J"/"N"

  string crdVfggOrigWs = 11;          // Originalwährung
  double crdVfggOrigKurs = 12;        // BigDecimal(17,8) → double
  double crdEntBtrg = 13;             // BigDecimal(17,2)

  string crdVerfallMon = 14;          // Ablaufmonat (MMYY)
  double crdAfsgBtrg = 15;            // BigDecimal(17,2)

  string sepTraExtPurp = 16;          // Zweckbestimmung

  string primaryAccountNumber = 17;   // PAN
  string transactionLifeCycleId = 18;
  string acquirerReferenceData = 19;

  double transactionBetrag = 20;      // BigDecimal(17,2)
  string transactionDateAndTime = 21; // Timestamp (String for now)

  int32 anzahlAutoErstattungen = 22;  // Anzahl (int)
  double autoErstMaxBetrag = 23;      // BigDecimal(17,2)
  int32 autoErstMaxAnzahl = 24;       // Anzahl (int)

  string osplusValuta = 25;           // Valuta (String)
  int32 issuerId = 26;                // GENERIC_ISSUER_ID (int)
}
