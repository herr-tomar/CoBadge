@Test
public void testPollRequestMaps_PositiveFlow() {
    testCollector.clear();

    Map<String, Object> request = Map.of("key", "value");
    String correlationId = sampleFlowHandler.extractCorrelationId(request);

    IMap<Object, Object> requestMap = hazelcastInstance.getMap("map-0");
    requestMap.put(correlationId, request);

    consumer.pollRequestMaps();

    assertTrue(testCollector.wasSent("res-topic"), "Expected response to be sent on topic");
    assertEquals("wrappedResponse", testCollector.getSent("res-topic"));
}
