syntax = "proto3";

package osplus.pkptuna.dispute.model;

import "google/protobuf/timestamp.proto";

option java_package = "osplus.pkptuna.dispute.model"; // TODO add create
option java_outer_classname = "DisputeCreateProto";
option java_multiple_files = true;

// -----Vom Orchestrator gesendetes DTO
message DisputeCreateRequestWrapperDto {
  string correlationId = 1;
  DisputeCreateRequestDto payload = 2;
}

message DisputeCreateRequestDto {
    DisputeCreateRequestIboDto body = 1;
    string issuerId = 2;
}

// Rest dto wird f√ºr IBO-Call verwendet
message DisputeCreateRequestIboDto {
  string disputeReason = 1;
  string refundRedebitIndicator = 2;
  RefundRedebitAmountDto refundRedebitAmount = 3;
  string declareFraudIndicator = 4;
  repeated DisputeEventDto disputeEvents = 5;
  repeated DisputeDocumentDto disputeDocuments = 6;
}

message RefundRedebitAmountDto {
  int32 value = 1;
  int32 exponent = 2;
  string isoCode = 3;
}

message DisputeEventDto {
  string type = 1;
  string message = 2;
}

message DisputeDocumentDto {
  string data = 1;
  string type = 2;
  string label = 3;
  string fileName = 4;
  string documentTypeId = 5;
}

message DisputeCreateResponseDto {
  string status = 1;
}

message DisputeCreateResponseWrapperDto {
  string correlationId = 1;
  DisputeCreateResponseDto response = 2;
}


